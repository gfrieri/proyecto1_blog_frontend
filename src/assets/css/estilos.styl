@font-face {
  font-family: 'iconos';
  src:  url('../fonts/iconitos/icomoon.eot?x4y5m7');
  src:  url('../fonts/iconitos/icomoon.eot?x4y5m7#iefix') format('embedded-opentype'),
    url('../fonts/iconitos/icomoon.ttf?x4y5m7') format('truetype'),
    url('../fonts/iconitos/icomoon.woff?x4y5m7') format('woff'),
    url('../fonts/iconitos/icomoon.svg?x4y5m7#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

html
    font-family: Arial, Helvetica, sans-serif
    body
        background: #e8e8e8
    header
        background: #444444
        display: flex
        justify-content: space-between
        box-shadow: 0px 3px 2px 0px rgba(0,0,0,0.2);
        div:first-child
            display: flex
        div
            .logo
                padding: 0 35px
                border-right: 2px solid #22bce0
                margin: 10px 0
                img
                    height: 100px
            .encabezado
                margin: 10px 0
                padding: 0 10px
                display: flex
                flex-direction: column
                justify-content: center
                .titulo,.clase,.fuente
                    color: white
                .titulo
                    h2
                        font-size: 18px;
                .clase
                    margin-top: 5px
                    h3
                        font-size: 14px
                        font-style: italic
                        color: #22bce0
                        font-weight: bold
                .fuente
                    display: flex
                    margin-top: 5px
                    align-items: first baseline
                    p
                        margin-right: 5px
                        cursor: pointer
                        color: #dd4f24
                    p:first-child
                        font-size: 12px
                    p:last-child
                        font-size: 20px
        .avatar-publicar
            display: flex
            align-items: center
            margin-right: 30px
            .avatar
                display: flex
                align-items: center;
                .img-avatar
                    margin-right: -5px;
                    z-index: 1;
                    img
                        height: 50px;
                        border-radius: 50%
                .menu
                    background: #dd4f24;
                    height: fit-content;
                    padding: 5px 5px 5px 10px;
                    p
                        color: white;
                        span::after
                            font-family: "iconos"
                            content: "\ea1c"
                            display: inline-block
                            transform: rotate(90deg)
            .btn
                background: #dd4f24
                padding: 5px 30px 5px 60px
                margin-right: -5px
                p
                    color: white;
                    font-style: italic;
                    position: relative
                    span
                        position: absolute
                        left: -55px
                        top: -15px
                    span::before
                        font-family: "iconos"
                        content:"\e908"
                        font-size: 40px
    nav
        padding: 15px 0px
        background: #22bce0
        box-shadow: 0px 3px 2px 0px rgba(0,0,0,0.2)
        .triangulo
            border-top: 10px solid transparent;
            border-bottom: 10px solid transparent;
            border-right: 10px solid transparent;
            border-left: 10px solid white;
        ul
            display: flex
            li
                margin-right: 35px
                a
                    color: white
                    text-decoration: none
                    font-weight: bold
            li:hover
                background: rgba(0,0,0,0.1)
    section
        display: flex
        flex-wrap: wrap
        article
            margin: 10px auto
            border-bottom-left-radius: 8px
            border-bottom-right-radius: 8px
            box-shadow: 0px 0px 11px 0px rgba(0,0,0,0.75)
            flex-basis: 45%
            background: white
            .contenido
                border-bottom: 4px solid #22bce0
                display: flex
                .portada
                    img
                        height: 200px
                .informacion
                    margin: 0 15px
                    flex-grow: 1
                    .titulo
                        font-weight: bold
                        font-size: 18px
                        font-style: italic
                        margin-top: 10px
                    .autor
                        margin-top: 5px
                        span
                            color: #dd4f24
                            text-decoration: underline
                    .tag-tiempo
                        display: flex
                        justify-content: space-between
                        margin-top: 10px
                        .tag
                            p
                                background: #22bce0
                                padding: 5px 10px
                                color: white
                                border-radius: 16px
                        .tiempo
                            p
                                span
                                    font-weight: bold
            .puntuacion
                display: flex
                justify-content: space-between
                padding: 10px 0px
                margin 0 15px
                .ranking
                    p
                        .up::before
                            font-family: "iconos"
                            content: "\ea1c"
                            color: green
                            display: inline-block
                            transform: rotate(270deg)
                        .down::before
                            font-family: "iconos"
                            content: "\ea1c"
                            color: red
                            display: inline-block
                            transform: rotate(90deg)
                .calificacion
                    p
                        .puntaje
                            background: #444444
                            padding: 3px 8px
                            color: white
                            border-radius: 5px
                        .ico
                            margin-left: 10px
                        .ico::before
                            font-family: "iconos"
                            content: "\e9d8"
                            color: #fcb92d
    footer
        background: #dd4f24
        padding: 50px 0px
        div
            display: flex
            justify-content: center
            p
                display: flex
                flex-direction: column
                color: rgba(255,255,255,0.5)
                font-weight: bold
                span
                    font-weight: normal
                span::before, span::after
                    content:" - "
                